const arr1 = ['a', 'b', 'c'];
const arr2 = ['a', 'c', 'b'];

function areEqual(array1, array2) {
  if (array1.length === array2.length) {
    return array1.every((element, index) => {
      if (element === array2[index]) {
        return true;
      }

      return false;
    });
  }

  return false;
}

console.log(areEqual(arr1, arr2)); // ğŸ‘‰ï¸ true